---
const currentPath = Astro.url.pathname;
const isActive = (path: string) => currentPath === path || (path !== '/' && currentPath.startsWith(path));
---

<nav class="md:sticky md:top-8 px-2">
  <h1 class="title-wide link-hover font-bold">
    <a href="/">Nathan Cheng</a>
  </h1>
  <p class="mb-5 text-sm font-normal text-stone-500 dark:text-stone-50/80">
    Thoughts and quotes re: film, internet, design, and media.
  </p>
  <ul class="text-sm text-stone-500 dark:text-stone-50/80 font-medium flex flex-nowrap overflow-x-auto gap-y-2 gap-5 md:grid md:gap-2 mb-5">
    <li class={isActive('/') ? 'opacity-50 hover:translate-y-0' : 'link-hover'}>
      <a href="/">Recent</a>
    </li>
    <li class={isActive('/archive') ? 'opacity-50 hover:translate-y-0' : 'link-hover'}>
      <a href="/archive">Archive</a>
    </li>
    <li class={isActive('/about') ? 'opacity-50 hover:translate-y-0' : 'link-hover'}>
      <a href="/about">About</a>
    </li>
    <li class={isActive('/tags') ? 'opacity-50 hover:translate-y-0' : 'link-hover'}>
      <a href="/tags">Tags</a>
    </li>
    <li class="link-hover">
      <a href="https://nathancheng.fyi" target="_blank">Notes<sup class="opacity-75">↗</sup></a>
    </li>
    <li class="link-hover">
      <a href="https://nathancheng.work" target="_blank">Work<sup class="opacity-75">↗</sup></a>
    </li>
  </ul>
</nav>
